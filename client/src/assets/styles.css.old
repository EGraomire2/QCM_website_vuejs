body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background: #fffbf7;
}

/* ======================= COMMON ELEMENTS ====================== */
main {
    background-color: #ffeace;
    margin: 10px auto;
    margin-top: 200px;
    padding: 20px 20px;
    border-radius: 25px;
    max-width: 900px;
}

select {
    background: #ffeace;
    padding: 4px;
    border-radius: 30px;
    margin-top: 10px;
    margin-bottom: 10px;
    border: 2px dotted #d64237;
    transition: all 0.2s ease;
    font-weight: bold;
    color: #d64237;
    font-size: 14px;
    text-align: center;
    outline: none;
}

select:hover {
    border: 2px solid #d64237;
}

select:focus {
    color: #db7850;
}

/* ======================= HEADER ====================== */
header {
    color: #ffffff;
    padding: 10px 0;
    text-align: center;
}

header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    transition: transform0.4s ease;
}

h1 {
    background: linear-gradient(50deg, #db6c50 70%, #d64237);
    color: #ffeace;
    padding: 20px 0 50px;  /* crée un fond plus haut et bas */
    margin-top: -10px;     /* fait "remonter" le bloc vers le haut de la page */
    text-align: center;
}

#main-header.scrolled {
    transform: translateY(-60px);
}

nav.nav-link ul {
    background: #227297;
    background: linear-gradient(20deg, #3f98c2 50%, #491acc);
    display: flex;
    justify-content: space-around;
    align-items: center;
    list-style: none;
    margin: 30px auto;
    margin-top: -50px;
    padding: 18px 20px;
    border-radius: 30px;
    height: 30px; /* fixe la hauteur pour éviter les sauts */
    max-width: 800px;
    box-shadow: 0px 4px 10px #db7850;
}

nav.nav-link a {
    color: #c7e9ff;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    padding: 10px 20px;
    border-radius: 30px;
    display: inline-block;
    transition: all 0.2s ease;
}

nav.nav-link a:hover {
    color: #ffeace;
    padding: 10px 40px; /* élargit sur le survol */
    font-size: 20px;
    background: linear-gradient(50deg, #db7850, #d64237);
    border-radius: 30px;
}

button{
    /* Ajout du display flex et alignement centré */
    display: flex;
    align-items: center;
    justify-content: center;
}

.flash-message {
    background-color: #f9c2c2;
    color: #721c24;
    padding: 10px;
    margin: 20px auto;
    border-radius: 5px;
    width: 80%;
    text-align: center;
}

.container {
    width: 80%;
    margin: auto;
    overflow: hidden;
}

.test {
    text-decoration: underline;
    color: blueviolet;
    background-color: black;
    font-weight: 500;
}

/* Formulaire centré avec une largeur maximale */
form {
    background: #ffffff;
    padding: 30px; /* Plus de padding pour aérer */
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    max-width: 900px;
    margin: 30px auto;
}

form input[type="text"],
form textarea {
    width: 60%;
    padding: 12px;
    margin: 15px auto; /* Centrage horizontal */
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #fefefe;
    display: block; /* Pour que margin auto fonctionne */
}

form input.question-input {
    font-size: 16px;
    font-weight: bold;
    width: 60%;
    display: block;
    margin: 15px auto;
}

form input[type="submit"],
form button {
    background: #35424a;
    color: #ffffff;
    border: none;
    padding: 12px 20px;
    cursor: pointer;
    border-radius: 5px;
    margin-top: 15px;
    margin-left: 10px;
    margin-right: 10px; /* Espace au-dessus du bouton */
}

form input[type="submit"]:hover,
form button:hover {
    background: #45a049;
}

.qcm-header {
    background-color: #f1efef;
    margin-bottom: 10px;
    padding: 5px 0px 20px 40px;
    border-radius: 3px;
    border: 1px solid #a0a0a0;
}

.qcm-header > div {
    padding-top: 10px;   
}

/*=== HEADER ===*/

div.qcm-header {
    color: #d64237;
    font-weight: 550;
    font-size: 16px;
    background-color: #fcf3e8;
    margin: auto auto;
    margin-bottom: 10px;
    padding: 10px 20px ;
    border-radius: 20px;
    max-width: 820px;
    margin-bottom: 30px;
    
    box-shadow: 0px 4px 10px #db7850;
}

div.qcm-name-div {
    color: #db7850;
    padding: 10px 0px ;
    border-radius: 30px;
    margin: 0 auto;
    margin-bottom: 30px;
    font-weight: bolder;
    font-size: 18px;
    text-align: center;
}

.qcm-name-div input {
    display: block;
    background: #ffeace;
    padding: 8px;
    border-radius: 30px;
    margin: 30px auto;
    margin-top: 14px;
    margin-bottom: 8px;
    border: 3px dashed #d64237;
    width: 60%;
    outline: none;
    transition: all 0.2s ease;
    font-weight: bold;
    color:#d64237;
    font-size: 18px;
    text-align: center;
}

.qcm-name-div input:hover {
    border: 3px solid #d64237;
}

.qcm-name-div input:focus {
    outline: 5px solid #d64237; /* couleur personnalisée */
    outline-offset: -4px; /* optionnel : décolle un peu l’outline du champ */
    transform: scale(1.05);
}

.qcm-header p {
    font-size: 14px;
    text-align: center;
}

.qcm-header select {
    background: #ffeace;
    padding: 4px;
    border-radius: 30px;
    margin-top: 10px;
    margin-bottom: 10px;
    border: 2px dotted #d64237;
    transition: all 0.2s ease;
    font-weight: bold;
    color:#d64237;
    font-size: 14px;
    text-align: center;
    outline: none;
}

.qcm-header select:hover {
    border: 2px solid #d64237;
}

.qcm-header select:focus {
    color: #db7850;
}

/* animation des liens */
.qcm-header a {
    position: relative;
    text-decoration: none;
    background: linear-gradient(20deg, #3f98c2 50%, #491acc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: bold;
    text-decoration: none;
}

.qcm-header a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 2px;
    background: linear-gradient(20deg, #3f98c2 50%, #491acc);
    transition: width 0.3s ease;
}

.qcm-header a:hover::after {
    width: 100%;
}

/*=== QUESTIONS ===*/

.form-container {
    color: #5057b8;
    font-weight: 550;
    font-size: 16px;
