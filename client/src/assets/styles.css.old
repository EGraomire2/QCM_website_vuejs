}

.question-field input:hover {
    border: 3px solid #5057b8;
}

.question-field input:focus {
    outline: 4px solid #5057b8; /* couleur personnalisée */
    outline-offset: -4px; /* optionnel : décolle un peu l’outline du champ */
    transform: scale(1.05);
}

div.answers {
    color: #d64237;
    font-weight: 550;
    font-size: 16px;
    background: #fcf3e8;
    margin: auto auto;
    margin-bottom: 10px;
    padding: 10px 20px ;
    border-radius: 20px;
    border: 3px solid #db7850;
    max-width: 820px;
    margin-bottom: 30px;
}

.answer input {
    display: inline-block;
    background: #ffeace;
    padding: 4px;
    border-radius: 30px;
    width: 60%;
    margin: 20px;
    margin-top: 10px;
    margin-bottom: 10px;
    border: 2px dotted #d64237;
    transition: all 0.2s ease;
    font-weight: bold;
    color: #d64237;
    font-size: 14px;
    text-align: left;
    outline: none;
    position: relative; /* <<< ajouté ici */
}

.answer input:hover {
    border: 2px solid #d64237;
}

.answer input:focus {
    outline: 3px solid #d64237; /* couleur personnalisée */
    outline-offset: -3px; /* optionnel : décolle un peu l’outline du champ */
    transform: scale(1.05);
    z-index: 1; /* <<< ajouté ici */
}

.answer-dot {
    display: inline-block;
    width: 22px;
    height: 22px;
    margin-top: 8px;
    margin-right: 14px;
    border-radius: 30%;
    cursor: pointer;
    background: #d64237;
    transition: background 0.2s ease;
    transform: translateY(8px);
}

.answer-dot:hover {
    background: #a04945;
}

.answer-dot.correct {
    background: linear-gradient(20deg, #3fc27a , #1ab1cc);
    
}

.remove-answer {
    margin-left: 15px;
}

div.button-field {
    text-align: center;
    margin-bottom: 30px;
}

button.add-answer{
    margin: auto 30px;
    color: #c7e9ff;
    background: linear-gradient(50deg, #3f98c2 30%, #1a49cc);
}

button.add-answer:hover {
    color: #c7e9ff;
    background: #61619c;
}




/* Style pour l'interrupteur */
.switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 28px;
    margin: 10px 0;
    margin-left: 30px;
    margin-right: 10px;
    transform: translateY(-5px);
}

.switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(50deg, #db7850 30%, #d64237);
    transition: 0.4s;
    border-radius: 28px;
}

.slider:before {
    position: absolute;
    content: "";
    height: 24px;
    width: 24px;
    left: 2px;
    bottom: 2px;
    background-color: white;
    transition: 0.4s;
    border-radius: 50%;
}

input:checked + .slider {
    background: linear-gradient(50deg, #3f98c2 30%, #1a49cc);;
}

input:checked + .slider:before {
    transform: translateX(30px);
}

.explanation-field {
    text-align: center;
    font-size: 18px;
    color: #3f98c2;
    padding: 10px 0px ;
    border-radius: 30px;
    margin: left auto;
    margin-bottom: 30px;
    font-weight: bolder;
    font-size: 18px;
}

.explanation-field textarea {
    display: block;
    padding-bottom: 40px;
    padding-top: 4px;
    padding-left: 16px;
    padding-right: 16px;
    font-family: Arial, sans-serif;
    font-weight: 550;
    background: #c7e9ff;
    border-radius: 20px;
    margin: auto auto;
    border: 2px dashed #5057b8;
    margin: 10px auto;
    width: 90%;
    height: 24px;
    outline: none;
    transition: transform 0.2s ease;
    font-weight: bold;
    color:#5057b8;
    font-size: 16px;
    text-align: left;
    
}

.explanation-field textarea:hover {
    border-color: transparent;
    outline: 3px solid #5057b8; /* couleur personnalisée */
    outline-offset: -3px; /* optionnel : décolle un peu l’outline du champ */
}

.explanation-field textarea:focus {
    border-color: transparent;
    outline: 4px solid #5057b8; /* couleur personnalisée */
    outline-offset: -4px; /* optionnel : décolle un peu l’outline du champ */
    transform: scale(1.05);
}

.explanation-field textarea::placeholder {
    color: #5057b8a1;
}

div.points-fields {
    background: #fcf3e8;
    border-radius:  20px;
    padding: 20px;
    margin: 20px auto;
    border: 3px solid #db7850;
    width:50%;
}

.negative-points, .question-points {
    color: #d64237;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  

.points {
    
    margin: 10px;
    margin-left: 10px;
    display: flex;
    align-items: center;
    gap: 10px;
    min-width: 100px; /* ou une largeur fixe pour bien aligner */
}

.points span {
    width: 30px;  /* Largeur fixe pour l'élément contenant la valeur */
    text-align: center;  /* Assure que le texte est bien centré dans l'élément */
  }

.points button {
    width: 30px;
    height: 30px;
    border-radius: 10px;
}



